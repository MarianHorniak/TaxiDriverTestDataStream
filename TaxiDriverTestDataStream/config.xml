<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "sk.datastream.taxidriverinternal"
        versionCode = "446"
        version     = "1.4.46">
 
    <name>TAXI Driver test datastream</name>
  
    <description>
        TAXI Driver test datastream application
    </description>
 
    <author href="http://www.datastream.sk" email="info@datastream.sk">
        DataStream
    </author>
  <icon src="img/phoneicon.png" />

  <icon src="img/phoneicon57.png"          gap:platform="ios" width="57"  height="57"  />
  <icon src="img/phoneicon72.png"       gap:platform="ios" width="72"  height="72"  />
  <icon src="img/phoneicon120.png"       gap:platform="ios" width="120"  height="120"  />
  <icon src="img/phoneicon152.png"       gap:platform="ios" width="152"  height="152"  />
  <icon src="img/phoneicon76.png"       gap:platform="ios" width="76"  height="76"  />

  <preference name="load-url-timeout" value="60000" />
  <preference name="phonegap-version" value="cli-6.3.0" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="exit-on-suspend" value="false" />
  <preference name="KeepRunning " value="true" />
  <preference name="Fullscreen" value="true" />
  <preference name="loadingDialog" value="Driver, Starting" />
  
  <access origin="*" />
  
  <plugin name="cordova-plugin-media" spec="~2.4.0" />
  <plugin name="cordova-plugin-geolocation" version="2.1.0" />
  
  <!--<feature name="http://api.phonegap.com/1.0/geolocation"/>
  <feature name="http://api.phonegap.com/1.0/network"/>-->

  <platform name="android">
    <preference name="android-build-tool" value="gradle" />
    <!-- Phonegap Build only -->
    <preference name="android-minSdkVersion" value="21" />
    <preference name="android-targetSdkVersion" value="23" />

    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
      <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    </config-file>
  </platform>
</widget>
